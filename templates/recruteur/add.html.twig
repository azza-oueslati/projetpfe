{% extends 'offre.html.twig' %}

{% block title %}Les offres
{% endblock %}

{% block body %}
	<div class="container">
		<div class="section">
			<div class="row">
				<div class="col s12 m12">
					<h1>
						Ajouter un offre
					</h1>
					{{form_start(form)}}
					{{form_row(form.titre_offre,{'label':'Titre offre :','attr':{'placeholder':'titre offre ...'}})}}

					{{form_row(form.region_offre,{'label':'Region offre :','attr':{'placeholder':'region offre ...'}})}}

					{{form_row(form.description,{'label':'Description :','attr':{'placeholder':'Description'}})}}
					{{form_row(form.exigences,{'label':'Exigences :','attr':{'placeholder':'exigences'}})}}

					{{form_row(form.date_expiration,{'label':'Date expiration :','attr':{'placeholder':'Date expiration'}})}}


					<button type="submit" class="btn btn-success">Ajouter
					</button>
					{{form_end(form)}}
				</div>
			</div>
		</div>
		{% for label, messages in app.flashes(['success', 'warning']) %}
			{% for message in messages %}
				<div class="card-panel teal lighten-2">
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}
	{% endblock %}
