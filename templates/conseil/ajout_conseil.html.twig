{% extends 'base.html.twig' %}

{% block title %}Les conseil
{% endblock %}

{% block body %}
	<div class="container">
		<div class="section">
			<div class="row">
				<div class="col s12 m12">
					<h1>
						Ajouter conseil
					</h1>
					{{form_start(form)}}
					{{form_row(form.titre_conseil,{'label':'Titre conseil :','attr':{'placeholder':'titre conseil ...'}})}}

					{{form_row(form.description,{'label':'description :','attr':{'placeholder':'description...'}})}}


					<button type="submit" class="btn btn-success">Ajouter
					</button>
					{{form_end(form)}}
				</div>
			</div>
		</div>

	{% endblock %}
