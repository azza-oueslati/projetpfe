{% extends 'base.html.twig' %}

{% block title %}Les formation
{% endblock %}

{% block body %}
	<div class="container">
		<div class="section">
			<div class="row">
				<div class="col s12 m12">
					<h1>
						Ajouter formation
					</h1>
					{{form_start(form)}}
					{{form_row(form.titre_formation,{'label':'Titre formation :','attr':{'placeholder':'titre formation ...'}})}}

					{{form_row(form.description,{'label':'description :','attr':{'placeholder':'description...'}})}}

					{{form_row(form.centre_formation,{'label':'centre_formation :','attr':{'placeholder':'centre_formation'}})}}
					{{form_row(form.info,{'label':'info :','attr':{'placeholder':'info'}})}}
					{{form_row(form.web,{'label':'web :','attr':{'placeholder':'web'}})}}
					{{form_row(form.email,{'label':'email :','attr':{'placeholder':'email'}})}}

					<button type="submit" class="btn btn-success">Ajouter
					</button>
					{{form_end(form)}}
				</div>
			</div>
		</div>

	{% endblock %}
